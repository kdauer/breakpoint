<div class="userpage-container">
  <h1>Welcome {{result.user.username}}</h1>
  <p>here are your favourite spots:</p>
  {{#if message}}
  <div class="error-message">{{ message }}</div>
  {{/if}}
  {{#each result.favourites}}
  <p class="saved-favourite"><a href="/spotlist/detail/{{this.id}}">{{this.name}}</a></p>
  {{/each}}
</div>